{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.space_hero_ai": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"space_hero_idle.arm"
					],
					"transitions": [
						{
							"attack": "v.attack_time"
						},
						{
							"skill": "q.is_sheared"
						}
					],
					"blend_transition": 0.1
				},
				"attack": {
					"animations": [
						"space_hero_attack"
					],
					"transitions": [
						{
							"default": "query.all_animations_finished"
						},
						{
							"skill": "q.is_sheared"
						}
					],
					"blend_transition": 0.1
				},
				"skill": {
					"animations": [
						"space_hero.skill"
					],
					"transitions": [
						{
							"default": "!q.is_sheared"
						}
					],
					"blend_transition": 0.1
				}
			}
		},
		"controller.animation.space_hero_walk": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"space_hero_idle.leg"
					],
					"transitions": [
						{
							"move": "query.modified_move_speed > 0.1"
						}
					],
					"blend_transition": 0.1
				},
				"move": {
					"animations": [
						"space_hero_move.leg"
					],
					"transitions": [
						{
							"default": "query.modified_move_speed <= 0.1"
						}
					],
					"blend_transition": 0.1
				}
			}
		}
	}
}