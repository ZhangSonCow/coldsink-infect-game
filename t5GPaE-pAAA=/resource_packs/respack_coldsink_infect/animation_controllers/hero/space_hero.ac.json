{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.space_hero": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [ "space_hero.idle.arm" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"attack_big": "v.attack_time && q.is_saddled"
						},
						{
							"attack": "v.attack_time && !q.is_saddled"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"attack": {
					"animations": [ "space_hero.attack" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"attack_big": {
					"animations": [ "space_hero.attack_big" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"skill": {
					"animations": [ "space_hero.skill" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					]
				}
			}
		},
		"controller.animation.space_hero.1st": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [ "space_hero.idle.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 4"
						},
						{
							"attack_big": "v.attack_time && q.is_saddled"
						},
						{
							"attack": "v.attack_time && !q.is_saddled"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"begin": {
					"animations": [ "space_hero.begin.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					]
				},
				"attack": {
					"animations": [ "space_hero.attack.1st" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 4"
						},
						{
							"default": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"attack_big": {
					"animations": [ "space_hero.attack_big.1st" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 4"
						},
						{
							"default": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"skill": {
					"animations": [ "space_hero.skill.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					]
				}
			}
		},

		"controller.animation.space_hero.walk": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [ "space_hero.idle.leg" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"walk": "q.modified_move_speed > 0.1"
						}
					]
				},
				"walk": {
					"animations": [ "space_hero.move.leg" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"default": "q.modified_move_speed <= 0.1"
						}
					]
				}
			}
		}
	}
}
