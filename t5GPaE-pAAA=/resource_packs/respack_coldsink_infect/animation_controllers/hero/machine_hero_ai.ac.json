{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.machine_hero_ai": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"machine_hero.idle_melee"
					],
					"transitions": [
						{
							"weapon_idle": "q.variant == 1"
						},
						{
							"attack": "v.attack_time"
						},
						{
							"skill": "q.is_sheared"
						}
					],
					"blend_transition": 0.1
				},
				"weapon_idle": {
					"animations": [
						"machine_hero.idle_weapon"
					],
					"transitions": [
						{
							"default": "q.variant == 2"
						},
						{
							"skill": "q.is_sheared"
						}
					],
					"blend_transition": 0.1
				},
				"attack": {
					"animations": [
						"machine_hero_attack"
					],
					"transitions": [
						{
							"default": "query.all_animations_finished"
						},
						{
							"skill": "q.is_sheared"
						}
					],
					"blend_transition": 0.1
				},
				"skill": {
					"animations": [
						"machine_hero.skill"
					],
					"transitions": [
						{
							"default": "!q.is_sheared"
						}
					],
					"blend_transition": 0.1
				}
			}
		},
		"controller.animation.machine_hero_walk": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"machine_hero_idle.leg"
					],
					"transitions": [
						{
							"move": "query.modified_move_speed > 0.1"
						}
					],
					"blend_transition": 0.1
				},
				"move": {
					"animations": [
						"machine_hero_move.leg"
					],
					"transitions": [
						{
							"default": "query.modified_move_speed <= 0.1"
						}
					],
					"blend_transition": 0.1
				}
			}
		}
	}
}