{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.redeem_hero": {
			"initial_state": "idle_weapon",
			"states": {
				"idle_weapon": {
					"animations": [ "redeem_hero.idle_weapon.arm" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_grenade": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"idle_needle": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"attack_big": "v.attack_time && q.is_saddled"
						},
						{
							"attack": "v.attack_time && !q.is_saddled"
						}
					]
				},
				"idle_grenade": {
					"animations": [ "redeem_hero.idle_grenade.arm" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "!q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_needle": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"skill_1": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"idle_needle": {
					"animations": [ "redeem_hero.idle_needle.arm" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "!q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_grenade": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"skill_2": "q.property('coldsink:action_status') == 4"
						}
					]
				},
				"attack": {
					"animations": [ "redeem_hero.attack" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill_1": "q.property('coldsink:action_status') == 3"
						},
						{
							"skill_2": "q.property('coldsink:action_status') == 4"
						}
					]
				},
				"attack_big": {
					"animations": [ "redeem_hero.attack_big" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill_1": "q.property('coldsink:action_status') == 3"
						},
						{
							"skill_2": "q.property('coldsink:action_status') == 4"
						}
					]
				},
				"skill_1": {
					"animations": [ "redeem_hero.skill_1" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_grenade": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"idle_needle": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						}
					]
				},
				"skill_2": {
					"animations": [ "redeem_hero.skill_2" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_grenade": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"idle_needle": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						}
					]
				}
			}
		},

		"controller.animation.redeem_hero.1st": {
			"initial_state": "idle_weapon",
			"states": {
				"idle_weapon": {
					"animations": [ "redeem_hero.idle_weapon.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 5"
						},
						{
							"idle_grenade": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"idle_needle": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"attack_big": "v.attack_time && q.is_saddled"
						},
						{
							"attack": "v.attack_time && !q.is_saddled"
						}
					]
				},
				"begin": {
					"animations": [ "redeem_hero.begin.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0"
						}
					]
				},
				"idle_grenade": {
					"animations": [ "redeem_hero.idle_grenade.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "!q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_needle": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"skill_1": "q.property('coldsink:action_status') == 3"
						}
					]
				},
				"idle_needle": {
					"animations": [ "redeem_hero.idle_needle.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "!q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_grenade": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"skill_2": "q.property('coldsink:action_status') == 4"
						}
					]
				},
				"attack": {
					"animations": [ "redeem_hero.attack.1st" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 5"
						},
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill_1": "q.property('coldsink:action_status') == 3"
						},
						{
							"skill_2": "q.property('coldsink:action_status') == 4"
						}
					]
				},
				"attack_big": {
					"animations": [ "redeem_hero.attack_big.1st" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 5"
						},
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !v.attack_time"
						},
						{
							"skill_1": "q.property('coldsink:action_status') == 3"
						},
						{
							"skill_2": "q.property('coldsink:action_status') == 4"
						}
					]
				},
				"skill_1": {
					"animations": [ "redeem_hero.skill_1.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_grenade": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"idle_needle": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						}
					]
				},
				"skill_2": {
					"animations": [ "redeem_hero.skill_2.1st" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"idle_weapon": "q.property('coldsink:action_status') == 0 && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"idle_grenade": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"idle_needle": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						}
					]
				}
			}
		},

		"controller.animation.redeem_hero.walk": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [ "redeem_hero.idle.leg" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"walk": "q.modified_move_speed > 0.1"
						}
					]
				},
				"walk": {
					"animations": [ "redeem_hero.move.leg" ],
					"blend_transition": 0.1,
					"transitions": [
						{
							"default": "q.modified_move_speed <= 0.1"
						}
					]
				}
			}
		}
	}
}
