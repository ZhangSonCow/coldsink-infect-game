{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.redeem_hero_change": {
			"initial_state": "handle_weapon",
			"states": {
				"handle_weapon": {
					"animations": [ "redeem_hero.handle_weapon" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"handle_grenade": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						},
						{
							"handle_needle": "q.property('coldsink:action_status') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						}
					]
				},
				"handle_grenade": {
					"animations": [ "redeem_hero.handle_grenade" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"handle_weapon": "q.property('coldsink:action_status') != 3 && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"handle_needle": "q.property('coldsink:action_status') != 3 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						}
					]
				},
				"handle_needle": {
					"animations": [ "redeem_hero.handle_needle" ],
					"blend_transition": 0.0,
					"transitions": [
						{
							"handle_weapon": "q.property('coldsink:action_status') != 4 && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1') && !q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_2')"
						},
						{
							"handle_grenade": "q.property('coldsink:action_status') != 4 && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:redeem_hero_skill_1')"
						}
					]
				}
			}
		}
	}
}
