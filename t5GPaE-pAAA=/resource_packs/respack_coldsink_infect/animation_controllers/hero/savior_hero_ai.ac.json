{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.savior_hero_ai": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"savior_hero_weapon_1.idle"
					],
					"transitions": [
						{
							"weapon_boom": "q.variant == 2"
						}
					],
					"blend_transition": 0.25
				},
				"weapon_boom": {
					"animations": [
						"savior_hero_weapon_2.idle"
					],
					"transitions": [
						{
							"default": "q.variant == 1"
						}
					],
					"blend_transition": 0.15
				}
			}
		}
	}
}