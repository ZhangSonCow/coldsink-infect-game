{
	"format_version": "1.18.0",
	"animation_controllers": {
		"controller.animation.witch_player.func": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"cry": "q.property('coldsink:action_status') == 4"
						},
						{
							"attack_light": "v.attack_time && !q.is_saddled"
						},
						{
							"attack_heavy": "v.attack_time && q.is_saddled"
						}
					]
				},
				"cry": {
					"animations": [ "witch_cry_sound" ],
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						},
						{
							"attack_light": "v.attack_time && !q.is_saddled"
						},
						{
							"attack_heavy": "v.attack_time && q.is_saddled"
						}
					]
				},
				"attack_light": {
					"animations": [ "witch_attack_light" ],
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					],
					"on_entry": [
						"/event entity @s action_attack_light"
					]
				},
				"attack_heavy": {
					"animations": [ "witch_attack_heavy" ],
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					],
					"on_entry": [
						"/event entity @s action_attack_heavy"
					]
				}
			}
		},

		// 技能持续时间控制

		"controller.animation.witch_skill_player.func": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"skill": "q.property('coldsink:time_skill')"
						}
					]
				},
				"skill": {
					"animations": [ "witch_skill_timer" ],
					"transitions": [
						{
							"default": "!q.property('coldsink:time_skill')"
						}
					],
					"on_entry": [
						"/tag @s add no_any_hurt"
					],
					"on_exit": [
						"/tag @s remove no_any_hurt"
					]
				}
			}
		}
	}
}
