{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.human_hero_player.func": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 4"
						},
						{
							"attack_0": "v.attack_time && !q.is_saddled"
						},
						{
							"attack_1": "v.attack_time && q.is_saddled"
						}
					],
					"on_entry": [
						"/event entity @s action_clear"
					]
				},
				"begin": {
					"animations": [ "human_hero_begin" ],
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					]
				},
				"attack_0": {
					"animations": [ "human_hero_attack_light" ],
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 4"
						},
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					],
					"on_entry": [
						"/event entity @s action_attack_light"
					]
				},
				"attack_1": {
					"animations": [ "human_hero_attack_heavy" ],
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 4"
						},
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					],
					"on_entry": [
						"/event entity @s action_attack_heavy"
					]
				}
			}
		}
	}
}
