{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.machine_hero_player.func": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 5"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						},
						{
							"fire": "q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:machine_hero_weapon') && q.is_using_item && !q.property('coldsink:jockey_control') && !q.property('coldsink:tnnk_howl_control')"
						},
						{
							"attack_0": "v.attack_time && !q.is_saddled"
						},
						{
							"attack_1": "v.attack_time && q.is_saddled"
						}
					],
					"on_entry": [
						"/event entity @s action_clear"
					]
				},
				"begin": {
					"animations": [ "machine_hero_begin" ],
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					]
				},
				"fire": {
					"animations": [ "machine_hero_weapon_fire" ],
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					],
					"on_entry": [
						"/event entity @s[scores={bullet_hero=1..}] action_skill_other",
						"/event entity @s[tag=fire_sp,scores={bullet_hero=1..}] coldsink:machine_hero_weapon_fire_sp",
						"/event entity @s[tag=!fire_sp,scores={bullet_hero=1..}] coldsink:machine_hero_weapon_fire",
						"/scoreboard players remove @s[scores={bullet_hero=1..}] bullet_hero 1",
						"/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§f< §b\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_hero\"}},{\"text\":\"§f / §b120\"},{\"text\":\"§f >\"}]}",
						"/event entity @s[scores={bullet_hero=0}] action_empty",

						"/camerashake add @s[scores={bullet_hero=1..}] 0.03 0.08 rotational",
						"/scoreboard players random @s[scores={bullet_hero=1..}] wp_random 1 3",
						"/execute @s[scores={wp_random=1,bullet_hero=1..}] ~~~ playsound machine_hero_weapon.piu @a ~~~ 3 0.8",
						"/execute @s[scores={wp_random=2,bullet_hero=1..}] ~~~ playsound machine_hero_weapon.piu @a ~~~ 3 1",
						"/execute @s[scores={wp_random=3,bullet_hero=1..}] ~~~ playsound machine_hero_weapon.piu @a ~~~ 3 1.2"
					]
				},
				"attack_0": {
					"animations": [ "machine_hero_attack_light" ],
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 5"
						},
						{
							"default": "q.property('coldsink:action_status') == 0"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					],
					"on_entry": [
						"/event entity @s action_attack_light"
					]
				},
				"attack_1": {
					"animations": [ "machine_hero_attack_heavy" ],
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 5"
						},
						{
							"default": "q.property('coldsink:action_status') == 0"
						},
						{
							"skill": "q.property('coldsink:action_status') == 3"
						}
					],
					"on_entry": [
						"/event entity @s action_attack_heavy"
					]
				},
				"skill": {
					"animations": [ "machine_hero_skill_timer" ],
					"transitions": [
						{
							"begin": "q.property('coldsink:action_status') == 5"
						},
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					]
				}
			}
		}
	}
}
