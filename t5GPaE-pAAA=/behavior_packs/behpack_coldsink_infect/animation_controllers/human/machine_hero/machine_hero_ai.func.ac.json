{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.machine_hero_ai.func": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [ "spawn_fort" ],
					"transitions": [
						{
							"death": "!q.is_alive"
						}
					]
				},
				"death": {
					"on_entry": [
						"/execute @s[tag=游戏中] ~~~ tellraw @a {\"rawtext\":[{\"text\":\"§b【机械猎手】§f [\"},{\"selector\":\"@s\"},{\"text\":\"] §b已死亡\"}]}",
						"/execute @s[tag=游戏中] ~~~ function game/dead_keep_score",
						"/execute @s[tag=游戏中] ~~~ playsound hero_death @a",
						"/execute @s[tag=!游戏中] ~~~ playsound hero_death @a[r=32]",
						"/summon coldsink:dead_machine_hero",
						"/execute @s[tag=!游戏中] ~~~ event entity @e[type=coldsink:dead_machine_hero,c=1] despawn",
						"/event entity @s godie"
					]
				}
			}
		}
	}
}
