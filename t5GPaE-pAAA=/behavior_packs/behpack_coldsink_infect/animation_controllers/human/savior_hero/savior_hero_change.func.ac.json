{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.savior_hero_change.func": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"tem": "!q.is_sneaking"
						}
					]
				},
				"tem": {
					"transitions": [
						{
							"change_1": "q.is_sneaking && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:savior_hero_weapon_1')"
						},
						{
							"change_2": "q.is_sneaking && q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:savior_hero_weapon_2')"
						}
					]
				},
				"change_1": {
					"transitions": [
						{
							"default": "q.is_sneaking"
						}
					],
					"on_entry": [
						"/replaceitem entity @s[hasitem={item=coldsink:savior_hero_weapon_1,location=slot.weapon.mainhand}] slot.hotbar 0 coldsink:savior_hero_weapon_2 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}"
					]
				},
				"change_2": {
					"transitions": [
						{
							"default": "q.is_sneaking"
						}
					],
					"on_entry": [
						"/replaceitem entity @s[hasitem={item=coldsink:savior_hero_weapon_2,location=slot.weapon.mainhand}] slot.hotbar 0 coldsink:savior_hero_weapon_1 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}"
					]
				}
			}
		}
	}
}
