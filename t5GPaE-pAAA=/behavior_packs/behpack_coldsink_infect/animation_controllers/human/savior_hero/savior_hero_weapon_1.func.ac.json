{
	"format_version": "1.12.0",
	"animation_controllers": {
		"controller.animation.savior_hero_weapon_1.func": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"empty": "q.property('coldsink:action_status') == 3"
						},
						{
							"fire": "q.is_using_item && !q.property('coldsink:jockey_control') && !q.property('coldsink:tnnk_howl_control')"
						},
						{
							"loading": "v.attack_time || q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:savior_hero_weapon_1_empty')"
						}
					]
				},
				"fire": {
					"animations": [ "savior_hero_weapon_1_fire" ],
					"transitions": [
						{
							"empty": "q.property('coldsink:action_status') == 3"
						},
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					],
					"on_entry": [
						"/event entity @s[scores={bullet_hero=1..}] action_fired",
						"/event entity @s[tag=fire_sp,scores={bullet_hero=1..}] coldsink:savior_hero_weapon_1_fire_sp",
						"/event entity @s[tag=!fire_sp,scores={bullet_hero=1..}] coldsink:savior_hero_weapon_1_fire",
						"/scoreboard players remove @s[scores={bullet_hero=1..}] bullet_hero 1",
						"/titleraw @s[tag=maper,hasitem={item=coldsink:savior_hero_weapon_1,location=slot.weapon.mainhand}] actionbar {\"rawtext\":[{\"text\":\"§f< §6\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_hero\"}},{\"text\":\"§f / §6\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_back\"}},{\"text\":\"§f >\"}]}",
						"/titleraw @s[tag=!maper,hasitem={item=coldsink:savior_hero_weapon_1,location=slot.weapon.mainhand}] actionbar {\"rawtext\":[{\"text\":\"§f< §6\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_hero\"}},{\"text\":\"§f / §660\"},{\"text\":\"§f >\"}]}",
						"/event entity @s[scores={bullet_hero=0}] action_empty",

						"/camerashake add @s[scores={bullet_hero=1..}] 0.06 0.1 rotational",
						"/scoreboard players random @s[scores={bullet_hero=1..}] wp_random 1 3",
						"/execute @s[scores={wp_random=1,bullet_hero=1..}] ~~~ playsound savior_hero_weapon_1.piu @a ~~~ 3 0.8",
						"/execute @s[scores={wp_random=2,bullet_hero=1..}] ~~~ playsound savior_hero_weapon_1.piu @a ~~~ 3 1",
						"/execute @s[scores={wp_random=3,bullet_hero=1..}] ~~~ playsound savior_hero_weapon_1.piu @a ~~~ 3 1.2"
					]
				},
				"loading": {
					"animations": [ "savior_hero_weapon_1_loading" ],
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						}
					],
					"on_entry": [
						"/titleraw @s[tag=maper,scores={bullet_hero=60..}] actionbar {\"rawtext\":[{\"text\":\"§f< §6\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_hero\"}},{\"text\":\"§f / §6\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_back\"}},{\"text\":\"§f >\"}]}",
						"/titleraw @s[tag=!maper,scores={bullet_hero=60..}] actionbar {\"rawtext\":[{\"text\":\"§f< §6\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_1\"}},{\"text\":\"§f / §660\"},{\"text\":\"§f >\"}]}",
						"/event entity @s[scores={bullet_hero=..59}] action_reload"
					],
					"on_exit": [
						"/replaceitem entity @s[tag=maper,hasitem={item=coldsink:savior_hero_weapon_1_empty,location=slot.weapon.mainhand}] slot.weapon.mainhand 1 coldsink:savior_hero_weapon_1 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
						"/replaceitem entity @s[tag=!maper,hasitem={item=coldsink:savior_hero_weapon_1_empty,location=slot.weapon.mainhand}] slot.weapon.mainhand 1 coldsink:savior_hero_weapon_1 1 0"
					]
				},
				"empty": {
					"transitions": [
						{
							"default": "q.property('coldsink:action_status') == 0"
						},
						{
							"loading": "v.attack_time || q.is_item_name_any('slot.weapon.mainhand', 0, 'coldsink:savior_hero_weapon_1_empty')"
						},
						{
							"empty_fire": "q.is_using_item"
						}
					]
				},
				"empty_fire": {
					"transitions": [
						{
							"loading": "q.property('coldsink:action_status') == 2"
						},
						{
							"empty": "!q.is_using_item"
						}
					],
					"on_entry": [
						"/event entity @s[scores={bullet_hero=..59}] action_reload"
					]
				}
				
			}
		}
	}
}
