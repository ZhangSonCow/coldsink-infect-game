{
  "format_version": "1.8.0",
  "animations": {
    "animation.weapon_1_fire.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "0.075": [
          "/event entity @s action_clear"
        ]
      }
    },
    "animation.weapon_1_loading.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "0.0": [
          "/tag @s add self",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_1=..29,bullet_back=1..}] slot.weapon.mainhand 1 coldsink:weapon_1_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_1=..29,bullet_back=1..}] actionbar §bReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_1=..29,bullet_back=1..}] ~~~ playsound weapon_1.reload @a[tag=!self] ~~~",
          "/playsound weapon_1.reload.self @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_1=..29,bullet_back=1..}]",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_1=..29},hasitem={item=coldsink:weapon_1_clip}] slot.weapon.mainhand 1 coldsink:weapon_1_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_1=..29},hasitem={item=coldsink:weapon_1_clip}] actionbar §bReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_1=..29},hasitem={item=coldsink:weapon_1_clip}] ~~~ playsound weapon_1.reload @a[tag=!self] ~~~",
          "/playsound weapon_1.reload.self @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_1=..29},hasitem={item=coldsink:weapon_1_clip}]",

          "/replaceitem entity @s[m=c,scores={bullet_1=..29}] slot.weapon.mainhand 1 coldsink:weapon_1_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=c,scores={bullet_1=..29}] actionbar §bReloading...",
          "/execute @s[m=c,scores={bullet_1=..29}] ~~~ playsound weapon_1.reload @a[tag=!self] ~~~",
          "/playsound weapon_1.reload.self @s[m=c,scores={bullet_1=..29}]",
          
          "/replaceitem entity @s[tag=bullet_infinite,scores={bullet_1=..29}] slot.weapon.mainhand 1 coldsink:weapon_1_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[tag=bullet_infinite,scores={bullet_1=..29}] actionbar §bReloading...",
          "/execute @s[tag=bullet_infinite,scores={bullet_1=..29}] ~~~ playsound weapon_1.reload @a[tag=!self] ~~~",
          "/playsound weapon_1.reload.self @s[tag=bullet_infinite,scores={bullet_1=..29}]",

          "/tag @s remove self"
        ],
        "2.0": [
          // 【地图】

          // 计算备弹是否能填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need 30",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need -= @s bullet_1",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query = @s bullet_back",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query -= @s bullet_need",
          // 备弹够填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_1 30",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_back -= @s bullet_need",
          // 备弹不够填满主弹夹
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_1 += @s bullet_back",
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_back 0",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=maper] actionbar {\"rawtext\":[{\"text\":\"§f< §b\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_1\"}},{\"text\":\"§f / §b\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_back\"}},{\"text\":\"§f >\"}]}",

          // 【模组】

          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=!maper,hasitem={item=coldsink:weapon_1_clip}] bullet_1 30",
          "/clear @s[m=!c,tag=!bullet_infinite,tag=!maper] coldsink:weapon_1_clip 0 1",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=!maper] actionbar {\"rawtext\":[{\"text\":\"§f< §b\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_1\"}},{\"text\":\"§f / §b30\"},{\"text\":\"§f >\"}]}",
          
          // 【创造】

          "/scoreboard players set @s[m=c] bullet_1 30",
          "/titleraw @s[m=c] actionbar {\"rawtext\":[{\"text\":\"§f< §b\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_1\"}},{\"text\":\"§f / §b30\"},{\"text\":\"§f >\"}]}",

          "/scoreboard players set @s[tag=bullet_infinite] bullet_1 30",
          "/titleraw @s[tag=bullet_infinite] actionbar {\"rawtext\":[{\"text\":\"§f< §b\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_1\"}},{\"text\":\"§f / §b30\"},{\"text\":\"§f >\"}]}",
          
          "/event entity @s action_clear"
        ]
      }
    }
  }
}
