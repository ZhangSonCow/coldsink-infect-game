{
  "format_version": "1.8.0",
  "animations": {
    "animation.weapon_4_fire.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "1.75": [
          "/event entity @s action_clear"
        ]
      }
    },
    "animation.weapon_4_loading.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "0.0": [
          "/tag @s add self",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_4=..9,bullet_back=1..}] slot.weapon.mainhand 1 coldsink:weapon_4_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_4=..9,bullet_back=1..}] actionbar §dReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_4=..9,bullet_back=1..}] ~~~ playsound weapon_4.reload @a[tag=!self] ~~~",
          "/playsound weapon_4.reload.self @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_4=..9,bullet_back=1..}]",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_4=..9},hasitem={item=coldsink:weapon_4_clip}] slot.weapon.mainhand 1 coldsink:weapon_4_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_4=..9},hasitem={item=coldsink:weapon_4_clip}] actionbar §dReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_4=..9},hasitem={item=coldsink:weapon_4_clip}] ~~~ playsound weapon_4.reload @a[tag=!self] ~~~",
          "/playsound weapon_4.reload.self @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_4=..9},hasitem={item=coldsink:weapon_4_clip}]",

          "/replaceitem entity @s[m=c,scores={bullet_4=..9}] slot.weapon.mainhand 1 coldsink:weapon_4_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=c,scores={bullet_4=..9}] actionbar §dReloading...",
          "/execute @s[m=c,scores={bullet_4=..9}] ~~~ playsound weapon_4.reload @a[tag=!self] ~~~",
          "/playsound weapon_4.reload.self @s[m=c,scores={bullet_4=..9}]",

          "/replaceitem entity @s[tag=bullet_infinite,scores={bullet_4=..9}] slot.weapon.mainhand 1 coldsink:weapon_4_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[tag=bullet_infinite,scores={bullet_4=..9}] actionbar §dReloading...",
          "/execute @s[tag=bullet_infinite,scores={bullet_4=..9}] ~~~ playsound weapon_4.reload @a[tag=!self] ~~~",
          "/playsound weapon_4.reload.self @s[tag=bullet_infinite,scores={bullet_4=..9}]",
          
          "/tag @s remove self"
        ],
        "3.25": [
          // 【地图】

          // 计算备弹是否能填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need 10",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need -= @s bullet_4",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query = @s bullet_back",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query -= @s bullet_need",
          // 备弹够填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_4 10",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_back -= @s bullet_need",
          // 备弹不够填满主弹夹
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_4 += @s bullet_back",
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_back 0",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=maper] actionbar {\"rawtext\":[{\"text\":\"§f< §d\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_4\"}},{\"text\":\"§f / §d\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_back\"}},{\"text\":\"§f >\"}]}",

          // 【模组】

          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=!maper,hasitem={item=coldsink:weapon_4_clip}] bullet_4 10",
          "/clear @s[m=!c,tag=!bullet_infinite,tag=!maper] coldsink:weapon_4_clip 0 1",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=!maper] actionbar {\"rawtext\":[{\"text\":\"§f< §d\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_4\"}},{\"text\":\"§f / §d10\"},{\"text\":\"§f >\"}]}",
          
          // 【创造】

          "/scoreboard players set @s[m=c] bullet_4 10",
          "/titleraw @s[m=c] actionbar {\"rawtext\":[{\"text\":\"§f< §d\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_4\"}},{\"text\":\"§f / §d10\"},{\"text\":\"§f >\"}]}",

          "/scoreboard players set @s[tag=bullet_infinite] bullet_4 10",
          "/titleraw @s[tag=bullet_infinite] actionbar {\"rawtext\":[{\"text\":\"§f< §d\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_4\"}},{\"text\":\"§f / §d10\"},{\"text\":\"§f >\"}]}",

          "/event entity @s action_clear"
        ]
      }
    }
  }
}
