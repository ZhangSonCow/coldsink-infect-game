{
  "format_version": "1.8.0",
  "animations": {
    "animation.weapon_2_fire.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "0.05": [
          "/event entity @s action_clear"
        ]
      }
    },
    "animation.weapon_2_loading.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "0.0": [
          "/tag @s add self",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_2=..49,bullet_back=1..}] slot.weapon.mainhand 1 coldsink:weapon_2_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_2=..49,bullet_back=1..}] actionbar §eReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_2=..49,bullet_back=1..}] ~~~ playsound weapon_2.reload @a[tag=!self] ~~~",
          "/playsound weapon_2.reload.self @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_2=..49,bullet_back=1..}]",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_2=..49},hasitem={item=coldsink:weapon_2_clip}] slot.weapon.mainhand 1 coldsink:weapon_2_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_2=..49},hasitem={item=coldsink:weapon_2_clip}] actionbar §eReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_2=..49},hasitem={item=coldsink:weapon_2_clip}] ~~~ playsound weapon_2.reload @a[tag=!self] ~~~",
          "/playsound weapon_2.reload.self @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_2=..49},hasitem={item=coldsink:weapon_2_clip}]",

          "/replaceitem entity @s[m=c,scores={bullet_2=..49}] slot.weapon.mainhand 1 coldsink:weapon_2_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=c,scores={bullet_2=..49}] actionbar §eReloading...",
          "/execute @s[m=c,scores={bullet_2=..49}] ~~~ playsound weapon_2.reload @a[tag=!self] ~~~",
          "/playsound weapon_2.reload.self @s[m=c,scores={bullet_2=..49}]",

          "/replaceitem entity @s[tag=bullet_infinite,scores={bullet_2=..49}] slot.weapon.mainhand 1 coldsink:weapon_2_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[tag=bullet_infinite,scores={bullet_2=..49}] actionbar §eReloading...",
          "/execute @s[tag=bullet_infinite,scores={bullet_2=..49}] ~~~ playsound weapon_2.reload @a[tag=!self] ~~~",
          "/playsound weapon_2.reload.self @s[tag=bullet_infinite,scores={bullet_2=..49}]",
          
          "/tag @s remove self"
        ],
        "1.5": [
          // 【地图】

          // 计算备弹是否能填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need 50",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need -= @s bullet_2",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query = @s bullet_back",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query -= @s bullet_need",
          // 备弹够填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_2 50",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_back -= @s bullet_need",
          // 备弹不够填满主弹夹
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_2 += @s bullet_back",
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_back 0",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=maper] actionbar {\"rawtext\":[{\"text\":\"§f< §e\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_2\"}},{\"text\":\"§f / §e\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_back\"}},{\"text\":\"§f >\"}]}",

          // 【模组】

          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=!maper,hasitem={item=coldsink:weapon_2_clip}] bullet_2 50",
          "/clear @s[m=!c,tag=!bullet_infinite,tag=!maper] coldsink:weapon_2_clip 0 1",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=!maper] actionbar {\"rawtext\":[{\"text\":\"§f< §e\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_2\"}},{\"text\":\"§f / §e50\"},{\"text\":\"§f >\"}]}",
          
          // 【创造】

          "/scoreboard players set @s[m=c] bullet_2 50",
          "/titleraw @s[m=c] actionbar {\"rawtext\":[{\"text\":\"§f< §e\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_2\"}},{\"text\":\"§f / §e50\"},{\"text\":\"§f >\"}]}",

          "/scoreboard players set @s[tag=bullet_infinite] bullet_2 50",
          "/titleraw @s[tag=bullet_infinite] actionbar {\"rawtext\":[{\"text\":\"§f< §e\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_2\"}},{\"text\":\"§f / §e50\"},{\"text\":\"§f >\"}]}",

          "/event entity @s action_clear"
        ]
      }
    }
  }
}
