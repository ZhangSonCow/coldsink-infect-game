{
  "format_version": "1.8.0",
  "animations": {
    "animation.weapon_3_fire.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "0.06": [
          "/event entity @s action_clear"
        ]
      }
    },
    "animation.weapon_3_loading.func": {
      "loop": false,
      "animation_length": 10.0,
      "timeline": {
        "0.0": [
          "/tag @s add self",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_3=..99,bullet_back=1..}] slot.weapon.mainhand 1 coldsink:weapon_3_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_3=..99,bullet_back=1..}] actionbar §cReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_3=..99,bullet_back=1..}] ~~~ playsound weapon_3.reload @a[tag=!self] ~~~",
          "/playsound weapon_3.reload.self @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_3=..99,bullet_back=1..}]",

          "/replaceitem entity @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_3=..99},hasitem={item=coldsink:weapon_3_clip}] slot.weapon.mainhand 1 coldsink:weapon_3_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_3=..99},hasitem={item=coldsink:weapon_3_clip}] actionbar §cReloading...",
          "/execute @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_3=..99},hasitem={item=coldsink:weapon_3_clip}] ~~~ playsound weapon_3.reload @a[tag=!self] ~~~",
          "/playsound weapon_3.reload.self @s[m=!c,tag=!bullet_infinite,tag=!maper,scores={bullet_3=..99},hasitem={item=coldsink:weapon_3_clip}]",

          "/replaceitem entity @s[m=c,scores={bullet_3=..99}] slot.weapon.mainhand 1 coldsink:weapon_3_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[m=c,scores={bullet_3=..99}] actionbar §cReloading...",
          "/execute @s[m=c,scores={bullet_3=..99}] ~~~ playsound weapon_3.reload @a[tag=!self] ~~~",
          "/playsound weapon_3.reload.self @s[m=c,scores={bullet_3=..99}]",
          
          "/replaceitem entity @s[tag=bullet_infinite,scores={bullet_3=..99}] slot.weapon.mainhand 1 coldsink:weapon_3_empty 1 0 {\"item_lock\":{\"mode\":\"lock_in_slot\"}}",
          "/title @s[tag=bullet_infinite,scores={bullet_3=..99}] actionbar §cReloading...",
          "/execute @s[tag=bullet_infinite,scores={bullet_3=..99}] ~~~ playsound weapon_3.reload @a[tag=!self] ~~~",
          "/playsound weapon_3.reload.self @s[tag=bullet_infinite,scores={bullet_3=..99}]",
          
          "/tag @s remove self"
        ],
        "5.0": [
          // 【地图】

          // 计算备弹是否能填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need 100",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_need -= @s bullet_3",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query = @s bullet_back",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper] bullet_query -= @s bullet_need",
          // 备弹够填满主弹夹
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_3 100",
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=0..}] bullet_back -= @s bullet_need",
          // 备弹不够填满主弹夹
          "/scoreboard players operation @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_3 += @s bullet_back",
          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=maper,scores={bullet_query=..-1}] bullet_back 0",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=maper] actionbar {\"rawtext\":[{\"text\":\"§f< §c\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_3\"}},{\"text\":\"§f / §c\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_back\"}},{\"text\":\"§f >\"}]}",

          // 【模组】

          "/scoreboard players set @s[m=!c,tag=!bullet_infinite,tag=!maper,hasitem={item=coldsink:weapon_3_clip}] bullet_3 100",
          "/clear @s[m=!c,tag=!bullet_infinite,tag=!maper] coldsink:weapon_3_clip 0 1",
          "/titleraw @s[m=!c,tag=!bullet_infinite,tag=!maper] actionbar {\"rawtext\":[{\"text\":\"§f< §c\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_3\"}},{\"text\":\"§f / §c100\"},{\"text\":\"§f >\"}]}",
          
          // 【创造】

          "/scoreboard players set @s[m=c] bullet_3 100",
          "/titleraw @s[m=c] actionbar {\"rawtext\":[{\"text\":\"§f< §c\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_3\"}},{\"text\":\"§f / §c100\"},{\"text\":\"§f >\"}]}",
          
          "/scoreboard players set @s[tag=bullet_infinite] bullet_3 100",
          "/titleraw @s[tag=bullet_infinite] actionbar {\"rawtext\":[{\"text\":\"§f< §c\"},{\"score\":{\"name\":\"@s\",\"objective\":\"bullet_3\"}},{\"text\":\"§f / §c100\"},{\"text\":\"§f >\"}]}",

          "/event entity @s action_clear"
        ]
      }
    }
  }
}
