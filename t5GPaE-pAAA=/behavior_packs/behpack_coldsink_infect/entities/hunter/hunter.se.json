{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "coldsink:hunter",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "c": "controller.animation.hunter_ai.func",
        "hunter_interval_count": "animation.hunter_interval_count.func",
        "sound_interval": "animation.sfzombie_sound_interval.func"
      },
      "scripts": {
        "animate": [
          "c",
          "hunter_interval_count",
          "sound_interval"
        ]
      }
    },

    "component_groups": {
      "godie": {
        "minecraft:instant_despawn": {}
      },
      "walk": {
        "minecraft:navigation.walk": {
          "can_walk": true,
          "can_pass_doors": true,
          "can_break_doors": true,
          "is_amphibious": true,
          "avoid_damage_blocks": false
        }
      },
      "climb": {
        "minecraft:navigation.climb": {
          "can_path_over_water": true,
          "blocks_to_avoid": [
            "minecraft:barrier"
          ]
        },
        "minecraft:behavior.leap_at_target": {
          "priority": 0,
          "must_be_on_ground": true,
          "set_persistent": true,
          "target_dist": 128,
          "yd": 1.2
        }
      },
      "attack_mode": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "reselect_targets": true,
          "scan_interval": 50,
          "entity_types": [
            {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "!=",
                    "value": "tool"
                  },
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "neutral"
                  },
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "no_any_hurt"
                  }
                ]
              },
              "max_dist": 48
            }
          ],
          "must_see": true
        }
      },
      "get_box_mode": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "reselect_targets": true,
          "scan_interval": 50,
          "entity_types": [
            {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "=",
                    "value": "final_box_red"
                  }
                ]
              },
              "max_dist": 48
            }
          ],
          "must_see": true
        }
      }
    },

    "components": {
      "minecraft:nameable": {
        "always_show": false,
        "allow_name_tag_renaming": true
      },
      "minecraft:type_family": {
        "family": [ "mob", "sdc", "monster", "special", "hunter", "ai" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/hunter.loot.json"
      },
      "minecraft:health": {
        "value": 25,
        "max": 25
      },
      "minecraft:knockback_resistance": {
        "value": 0.4
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test":"has_damage",
                    "value":"attack"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  }
                ]
              },
              "event": "knockback",
              "target": "self"
            }
          },
          {
            "on_damage": {
              "filters": [
                {
                  "test":"has_damage",
                  "value":"fatal",
                  "operator": "!="
                }
              ],
              "event": "hurting",
              "target": "self"
            }
          },
          {
            "cause": "fall",
            "deals_damage": false
          }
        ]
      },
      "minecraft:attack": {
        "damage": 4
      },
      "minecraft:movement": {
        "value": 0.45
      },
      "minecraft:collision_box": {
        "width": 0.65,
        "height": 1.6
      },
      "minecraft:follow_range": {
        "value": 1024
      },
      "minecraft:jump.static": {},
      "minecraft:physics": {},
      "minecraft:movement.basic": {},

      "minecraft:on_target_acquired": {
        "event": "has_target",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "lost_target",
        "target": "self"
      },

      //behavivors

      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "max_dist": 64,
        "entity_types": {
          "filters": {
            "all_of": [
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "monster"
              },
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "tool"
              },
              {
                "test": "has_tag",
                "subject": "other",
                "operator": "!=",
                "value": "neutral"
              }
            ]
          }
        }
      },
      "minecraft:behavior.melee_attack": {
        "priority": 1,
        "track_target": true
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "walk",
            "attack_mode"
          ]
        }
      },
      "has_target": {
        "remove": {
          "component_groups": [
            "walk"
          ]
        },
        "add": {
          "component_groups": [
            "climb"
          ]
        }
      },
      "lost_target": {
        "remove": {
          "component_groups": [
            "climb"
          ]
        },
        "add": {
          "component_groups": [
            "walk"
          ]
        }
      },
      "knockback":{
        "queue_command": {
          "command": [
            "effect @s slowness 2 2 true"
          ]
        }
      },
      "hurting":{
        "queue_command": {
          "command": [
            "scoreboard players random @s[tag=!sound_interval] wp_random 1 3",

            "execute @s[tag=!sound_interval,scores={wp_random=1}] ~~~ playsound hunter.hurt_1 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=2}] ~~~ playsound hunter.hurt_2 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=3}] ~~~ playsound hunter.hurt_3 @a ~~~",

            "scoreboard players reset @s[tag=!sound_interval] idle_time",
            "tag @s[tag=!sound_interval] add sound_interval"
          ]
        }
      },
      // 救赎治愈变回人类
      "coldsink:default": {
        "queue_command": {
          "command": [
            "scoreboard players random @s wp_random 1 10",
            "execute @s[scores={wp_random=1..7}] ~~~ summon coldsink:spawner_human_mod",
            "execute @s[scores={wp_random=8..10}] ~~~ summon coldsink:human_hero",
            "event entity @s godie"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "godie"
          ]
        }
      }
    }
  }
}
