{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "coldsink:jockey",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "c": "controller.animation.jockey_ai.func",
        "jockey_skill_damage": "animation.jockey_skill_damage.func",
        "jockey_skill_random": "animation.jockey_skill_random.func",
        "jockey_skill_control": "animation.jockey_skill_control.func",
        "sound_interval": "animation.sfzombie_sound_interval.func"
      },
      "scripts": {
        "animate": [
          "c",
          "sound_interval"
        ]
      }
    },

    "component_groups": {
      "godie": {
        "minecraft:instant_despawn": {}
      },
      "walk": {
        "minecraft:navigation.walk": {
          "can_walk": true,
          "can_pass_doors": true,
          "can_break_doors": true,
          "is_amphibious": true,
          "avoid_damage_blocks": false
        }
      },
      "climb": {
        "minecraft:navigation.climb": {
          "can_path_over_water": true,
          "blocks_to_avoid": [
            "minecraft:barrier"
          ]
        },
        "minecraft:behavior.leap_at_target": {
          "priority": 3,
          "must_be_on_ground": true,
          "set_persistent": true,
          "target_dist": 128,
          "yd": 0.5
        }
      },

      "riding": {
        "minecraft:is_sheared": {},
        "minecraft:ageable": {
          "duration": 15,
          "grow_up": {
            "event": "skill_over"
          }
        },
        "minecraft:timer": {
          "time": 0.1,
          "time_down_event": {
            "event": "ride",
            "target": "self"
          }
        }
      },

      "melee": {
        "minecraft:timer": {
          "time": 8,
          "time_down_event": {
            "event": "skill",
            "target": "self"
          }
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "reselect_targets": true,
          "scan_interval": 50,
          "entity_types": [
            {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "!=",
                    "value": "tool"
                  },
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "neutral"
                  },
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "no_any_hurt"
                  }
                ]
              },
              "max_dist": 48
            }
          ],
          "must_see": true
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "attack_once": false,
          "track_target": true,
          "require_complete_path": false,
          "random_stop_interval": 0,
          "reach_multiplier": 4,
          "speed_multiplier": 1,
          "attack_duration": 0.5,
          "hit_delay_pct": 0.58
        }
      },
      "get_box_mode": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "reselect_targets": true,
          "scan_interval": 50,
          "entity_types": [
            {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "=",
                    "value": "final_box_red"
                  }
                ]
              },
              "max_dist": 48
            }
          ],
          "must_see": true
        }
      }
    },

    "components": {
      "minecraft:nameable": {
        "always_show": false,
        "allow_name_tag_renaming": true
      },
      "minecraft:type_family": {
        "family": [ "mob", "sdc", "monster", "special", "jockey", "jockey_ai", "ai" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/jockey.loot.json"
      },
      "minecraft:health": {
        "value": 32,
        "max": 32
      },
      "minecraft:knockback_resistance": {
        "value": 0.3
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test":"has_damage",
                    "value":"attack"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  }
                ]
              },
              "event": "knockback",
              "target": "self"
            }
          },
          {
            "on_damage": {
              "filters": [
                {
                  "test":"has_damage",
                  "value":"fatal",
                  "operator": "!="
                }
              ],
              "event": "hurting",
              "target": "self"
            }
          },
          {
            "cause": "fall",
            "deals_damage": false
          }
        ]
      },
      "minecraft:attack": {
        "damage": 5
      },
      "minecraft:movement": {
        "value": 0.45
      },
      "minecraft:collision_box": {
        "width": 0.65,
        "height": 1.6
      },
      "minecraft:follow_range": {
        "value": 1024
      },
      "minecraft:jump.static": {},
      "minecraft:physics": {},
      "minecraft:movement.basic": {},

      "minecraft:on_target_acquired": {
        "event": "has_target",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "lost_target",
        "target": "self"
      },

      //behavivors

      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "max_dist": 64,
        "entity_types": {
          "filters": {
            "all_of": [
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "monster"
              },
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "tool"
              },
              {
                "test": "has_tag",
                "subject": "other",
                "operator": "!=",
                "value": "neutral"
              }
            ]
          }
        }
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "walk",
            "melee"
          ]
        },
        "queue_command": {
          "command": [
            "scoreboard objectives add jockey_random dummy jockey_random",
            "scoreboard objectives add bool dummy bool"
          ]
        }
      },
      "has_target": {
        "remove": {
          "component_groups": [
            "walk"
          ]
        },
        "add": {
          "component_groups": [
            "climb"
          ]
        }
      },
      "lost_target": {
        "remove": {
          "component_groups": [
            "climb"
          ]
        },
        "add": {
          "component_groups": [
            "walk"
          ]
        }
      },
      "skill": {
        "queue_command": {
          "command": [
            "execute @e[type=!player,family=player,tag=!neutral,r=3.6,c=1] ~~~ event entity @e[type=!player,family=jockey,r=3.6,c=1] skill_begin",
            "execute @p[family=player,tag=!neutral,m=!c,r=3.6] ~~~ event entity @e[type=!player,family=jockey,r=3.6,c=1] skill_begin"
          ]
        }
      },
      "skill_begin": {
        "add": {
          "component_groups": [
            "riding"
          ]
        },
        "remove": {
          "component_groups": [
            "melee"
          ]
        },
        "queue_command": {
          "command": [
            "tag @s add jockey_skill",
            "execute @e[family=player,tag=!neutral,tag=jockey_riding,r=3.6,c=1] ~~~ tp @e[type=!player,family=jockey,c=1] ~~1.5~",
            "playsound jockey.skill @a ~~~",
            "tag @e[family=player,tag=!neutral,r=3.6,c=1] add jockey_riding",
            "scoreboard players random @e[family=player,tag=!neutral,r=3.6,c=1] jockey_random 1 8",
            "event entity @e[family=player,tag=!neutral,r=3.6,c=1] coldsink:jockey_control"
          ]
        }
      },
      "skill_over": {
        "add": {
          "component_groups": [
            "melee"
          ]
        },
        "remove": {
          "component_groups": [
            "riding"
          ]
        },
        "queue_command": {
          "command": [
            "tag @s remove jockey_skill",
            "event entity @e[family=player,tag=!neutral,tag=jockey_riding,c=1] coldsink:jockey_control_over",
            "tag @e[family=player,tag=!neutral,tag=jockey_riding,c=1] remove jockey_riding"
          ]
        }
      },
      "ride": {
        "queue_command": {
          "command": [
            "execute @e[family=player,tag=!neutral,tag=jockey_riding,r=3.6,c=1] ~~~ tp @e[type=!player,family=jockey,c=1] ~~1.5~",
            "scoreboard players set @s bool 0",
            "execute @e[family=player,tag=!neutral,r=3.6,c=1] ~~~ scoreboard players set @e[type=!player,family=jockey,r=3.6,c=1] bool 1",
            "event entity @s[scores={bool=0}] skill_over"
          ]
        }
      },
      "knockback":{
        "queue_command": {
          "command": [
            "effect @s slowness 2 2 true"
          ]
        }
      },
      "hurting":{
        "queue_command": {
          "command": [
            "scoreboard players random @s[tag=!sound_interval] wp_random 1 3",

            "execute @s[tag=!sound_interval,scores={wp_random=1}] ~~~ playsound jockey.hurt_1 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=2}] ~~~ playsound jockey.hurt_2 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=3}] ~~~ playsound jockey.hurt_3 @a ~~~",

            "scoreboard players reset @s[tag=!sound_interval] idle_time",
            "tag @s[tag=!sound_interval] add sound_interval"
          ]
        }
      },
      // 救赎治愈变回人类
      "coldsink:default": {
        "queue_command": {
          "command": [
            "scoreboard players random @s wp_random 1 10",
            "execute @s[scores={wp_random=1..7}] ~~~ summon coldsink:spawner_human_mod",
            "execute @s[scores={wp_random=8..10}] ~~~ summon coldsink:human_hero",
            "event entity @s godie"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "godie"
          ]
        },
        "queue_command": {
          "command": [
            "execute @s[tag=jockey_skill] ~~~ stopsound @a[r=18] jockey.skill",
						"execute @s[tag=jockey_skill] ~~~ event entity @e[family=player,tag=jockey_riding,tag=!neutral,r=3.6,c=1] coldsink:jockey_control_over",
						"execute @s[tag=jockey_skill] ~~~ tag @e[family=player,tag=jockey_riding,tag=!neutral,r=3.6,c=1] remove jockey_riding"
          ]
        }
      }
    }
  }
}
