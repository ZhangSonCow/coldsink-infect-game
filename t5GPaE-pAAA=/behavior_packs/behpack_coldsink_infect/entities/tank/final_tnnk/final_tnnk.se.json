{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "coldsink:final_tnnk",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "c": "controller.animation.final_tank_ai.func",
        "c.walk": "controller.animation.tank_move_sound.func",
        "tank_move_sound": "animation.tank_move_sound.func",
        "sound_interval": "animation.sfzombie_sound_interval.func"
      },
      "scripts": {
        "animate": [
          "c",
          "c.walk",
          "sound_interval"
        ]
      }
    },

    "component_groups": {
      "godie": {
        "minecraft:instant_despawn": {}
      },
      "shoot_now": {
        "minecraft:collision_box": {
          "width": 1.5,
          "height": 2.1
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 0,
          "attack_interval": 2,
          "attack_radius": 64
        },
        "minecraft:shooter": {
          "def": "coldsink:tnnk_fireball_tool"
        }
      },
      "skill": {
        "minecraft:collision_box": {
          "width": 0.5,
          "height": 0.5
        },
        "minecraft:is_sheared": {},
        "minecraft:ageable": {
          "duration": 1.0,
          "grow_up": {
            "event": "cooldown"
          }
        }
      },
      "skill_shoot": {
        "minecraft:spawn_entity": {
          "entities": [
            {
              "min_wait_time": 0,
              "max_wait_time": 0,
              "single_use": true,
              "spawn_entity": "coldsink:tnnk_fireball_ai",
              "num_to_spawn": 1
            }
          ]
        }
      },
      "cooldown": {
        "minecraft:collision_box": {
          "width": 1.5,
          "height": 2.1
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "attack_once": false,
          "track_target": true,
          "require_complete_path": false,
          "random_stop_interval": 0,
          "reach_multiplier": 6,
          "speed_multiplier": 1,
          "attack_duration": 1.3,
          "hit_delay_pct": 0.58
        },
        "minecraft:ageable": {
          "duration": 8,
          "grow_up": {
            "event": "charged"
          }
        }
      },
      "howl_trigger": {
        "minecraft:timer": {
          "time": [5, 10],
          "time_down_event": {
            "event": "howl",
            "target": "self"
          }
        }
      },
      "howling": {
        "minecraft:is_stunned": {},
        "minecraft:timer": {
          "time": 1,
          "time_down_event": {
            "event": "howl_over",
            "target": "self"
          }
        }
      },
      "lets_move": {
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "attack_once": false,
          "track_target": true,
          "require_complete_path": false,
          "random_stop_interval": 0,
          "reach_multiplier": 6,
          "speed_multiplier": 1,
          "attack_duration": 1.3,
          "hit_delay_pct": 0.45
        }
      },
      "walk": {
        "minecraft:navigation.walk": {
          "can_walk": true,
          "can_pass_doors": true,
          "can_break_doors": true,
          "is_amphibious": true,
          "avoid_damage_blocks": false
        }
      },
      "climb": {
        "minecraft:navigation.climb": {
          "can_path_over_water": true,
          "blocks_to_avoid": [
            "minecraft:barrier"
          ]
        },
        "minecraft:behavior.leap_at_target": {
          "priority": 3,
          "must_be_on_ground": true,
          "set_persistent": true,
          "target_dist": 128,
          "yd": 0.5
        }
      }
    },

    "components": {
      "minecraft:nameable": {
        "always_show": false,
        "allow_name_tag_renaming": true
      },
      "minecraft:type_family": {
        "family": [ "mob", "sdc", "monster","special", "final_tnnk", "boss", "final_boss", "ai" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/final_tnnk.loot.json"
      },
      "minecraft:health": {
        "value": 320,
        "max": 320
      },
      "minecraft:knockback_resistance": {
        "value": 0.99
      },
      "minecraft:boss": {
        "should_darken_sky": false,
        "hud_range": 24,
        "name": "§c炼狱泰坦"
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": [
                {
                  "test":"has_damage",
                  "value":"fatal",
                  "operator": "!="
                }
              ],
              "event": "hurting",
              "target": "self"
            }
          },
          {
            "cause": "fall",
            "deals_damage": false
          }
        ]
      },
      "minecraft:attack": {
        "damage": 16,
        "effect_name": "slowness",
        "effect_duration": 3
      },
      "minecraft:movement": {
        "value": 0.4
      },
      "minecraft:collision_box": {
        "width": 1.5,
        "height": 2.1
      },
      "minecraft:follow_range": {
        "value": 1024
      },
      "minecraft:physics": {},
      "minecraft:jump.static": {},
      "minecraft:movement.basic": {},

      "minecraft:on_target_acquired": {
        "event": "has_target",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "lost_target",
        "target": "self"
      },

      "minecraft:target_nearby_sensor": {
        "inside_range": 24.0,
        "outside_range": 25.0,
        "on_inside_range": {
          "event": "nacal_sdc:close_enough",
          "target": "self"
        },
        "on_outside_range": {
          "event": "nacal_sdc:too_far",
          "target": "self"
        }
      },

      //behavivors


      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "max_dist": 64,
        "entity_types": {
          "filters": {
            "all_of": [
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "monster"
              },
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "tool"
              },
              {
                "test": "has_tag",
                "subject": "other",
                "operator": "!=",
                "value": "neutral"
              }
            ]
          }
        }
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "scan_interval": 50,
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "tool"
                },
                {
                  "test": "has_tag",
                  "subject": "other",
                  "operator": "!=",
                  "value": "neutral"
                },
                {
                  "test": "has_tag",
                  "subject": "other",
                  "operator": "!=",
                  "value": "no_any_hurt"
                }
              ]
            },
            "max_dist": 48
          }
        ],
        "must_see": true
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "shoot_now",
            "walk"
          ]
        },
        "queue_command": {
          "command": [
            "scoreboard objectives add tnnk_move dummy tnnk_move",
            "tag @s add is_tnnk"
          ]
        }
      },
      "nacal_sdc:close_enough": {
        "add": {
          "component_groups": [
            "shoot_now"
          ]
        },
        "remove": {
          "component_groups": [
            "lets_move"
          ]
        }
      },
      "nacal_sdc:too_far": {
        "add": {
          "component_groups": [
            "lets_move"
          ]
        },
        "remove": {
          "component_groups": [
            "shoot_now"
          ]
        }
      },
      "has_target": {
        "remove": {
          "component_groups": [
            "walk"
          ]
        },
        "add": {
          "component_groups": [
            "climb"
          ]
        }
      },
      "lost_target": {
        "remove": {
          "component_groups": [
            "climb"
          ]
        },
        "add": {
          "component_groups": [
            "walk"
          ]
        }
      },
      "hurting":{
        "queue_command": {
          "command": [
            "scoreboard players random @s[tag=!sound_interval] wp_random 1 3",

            "execute @s[tag=!sound_interval,scores={wp_random=1}] ~~~ playsound tank.hurt_1 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=2}] ~~~ playsound tank.hurt_2 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=3}] ~~~ playsound tank.hurt_3 @a ~~~",

            "scoreboard players reset @s[tag=!sound_interval] idle_time",
            "tag @s[tag=!sound_interval] add sound_interval"
          ]
        }
      },
      "skill": {
        "remove": {
          "component_groups": [
            "shoot_now"
          ]
        },
        "add": {
          "component_groups": [
            "skill"
          ]
        }
      },
      "cooldown": {
        "remove": {
          "component_groups": [
            "skill"
          ]
        },
        "add": {
          "component_groups": [
            "skill_shoot",
            "cooldown",
            "howl_trigger"
          ]
        }
      },
      "charged": {
        "remove": {
          "component_groups": [
            "cooldown",
            "howl_trigger"
          ]
        },
        "add": {
          "component_groups": [
            "shoot_now"
          ]
        }
      },
      "howl": {
        "remove": {
          "component_groups": [
            "howl_trigger"
          ]
        },
        "add": {
          "component_groups": [
            "howling"
          ]
        },
        "queue_command": {
          "command": [
            "effect @s slowness 1 7 true",
            
            "ride @e[type=coldsink:human_ai,r=8] summon_rider coldsink:tnnk_howl_tool",
            "event entity @e[type=coldsink:human_ai,r=8] stop_shoot_run",
            
            "scoreboard players random @s wp_random 1 3",
						"execute @s[scores={wp_random=1}] ~~~ playsound tank.howl_1 @a ~~~",
						"execute @s[scores={wp_random=2}] ~~~ playsound tank.howl_2 @a ~~~",
						"execute @s[scores={wp_random=3}] ~~~ playsound tank.howl_3 @a ~~~",
            
            "effect @e[type=!player,family=player,family=!tool,type=!item,tag=!neutral,r=8] slowness 4 4 true",
            "effect @a[m=!c,family=player,family=!tool,tag=!neutral,r=8] slowness 4 4 true",
            "camerashake add @a[family=player,family=!tool,tag=!neutral,m=!c,r=8] 0.5 2 rotational",
            "event entity @e[type=!player,family=player,family=!tool,type=!item,tag=!neutral,tag=!is_hero,r=8] coldsink:tnnk_howl_control",
            "event entity @a[m=!c,family=player,family=!tool,tag=!neutral,tag=!is_hero,r=8] coldsink:tnnk_howl_control",
            
            "particle nacal_sdc:tnnk_blast ~~0.8~",
            "damage @e[family=player,family=!tool,type=!item,tag=!neutral,r=8] 6 suicide"
          ]
        }
      },
      "howl_over": {
        "remove": {
          "component_groups": [
            "howling"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "godie"
          ]
        }
      }
    }
  }
}
