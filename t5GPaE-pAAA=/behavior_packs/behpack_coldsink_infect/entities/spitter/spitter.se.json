{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "coldsink:spitter",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "c": "controller.animation.spitter_ai.func",
        "sound_interval": "animation.sfzombie_sound_interval.func"
      },
      "scripts": {
        "animate": [
          "c",
          "sound_interval"
        ]
      }
    },

    "component_groups": {
      "godie": {
        "minecraft:instant_despawn": {}
      },
      "shoot_now": {
        "minecraft:behavior.ranged_attack": {
          "priority": 0,
          //"attack_interval": 12,
          "attack_radius": 128,
          "attack_radius_min": 1,
          "charge_charged_trigger": 5,
          "charge_shoot_trigger": 4,
          "burst_shots": 1,
          "burst_interval": 0.01
        }
      },
      "skill": {
        "minecraft:is_sheared": {},
        "minecraft:ageable": {
          "duration": 0.5,
          "grow_up": {
            "event": "cooldown"
          }
        }
      },
      "cooldown": {
        "minecraft:ageable": {
          "duration": 11.5,
          "grow_up": {
            "event": "charged"
          }
        },
        "minecraft:behavior.melee_attack": {
          "priority": 0,
          "track_target": true
        }
      },
      "lets_move": {
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "attack_once": false,
          "track_target": true,
          "require_complete_path": false,
          "random_stop_interval": 0,
          "reach_multiplier": 4,
          "speed_multiplier": 1,
          "attack_duration": 0.75,
          "hit_delay_pct": 0.53
        }
      },
      "walk": {
        "minecraft:navigation.walk": {
          "can_walk": true,
          "can_pass_doors": true,
          "can_break_doors": true,
          "is_amphibious": true,
          "avoid_damage_blocks": false
        }
      },
      "climb": {
        "minecraft:navigation.climb": {
          "can_path_over_water": true,
          "blocks_to_avoid": [
            "minecraft:barrier"
          ]
        },
        "minecraft:behavior.leap_at_target": {
          "priority": 3,
          "must_be_on_ground": true,
          "set_persistent": true,
          "target_dist": 128,
          "yd": 0.6
        }
      },
      "attack_mode": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "reselect_targets": true,
          "scan_interval": 50,
          "entity_types": [
            {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "!=",
                    "value": "tool"
                  },
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "neutral"
                  },
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "no_any_hurt"
                  }
                ]
              },
              "max_dist": 48
            }
          ],
          "must_see": true
        }
      },
      "get_box_mode": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "reselect_targets": true,
          "scan_interval": 50,
          "entity_types": [
            {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "operator": "=",
                    "value": "final_box_red"
                  }
                ]
              },
              "max_dist": 48
            }
          ],
          "must_see": true
        }
      }
    },

    "components": {
      "minecraft:nameable": {
        "always_show": false,
        "allow_name_tag_renaming": true
      },
      "minecraft:type_family": {
        "family": [ "mob", "sdc", "monster","special", "spitter", "ai" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/spitter.loot.json"
      },
      "minecraft:health": {
        "value": 10,
        "max": 10
      },
      "minecraft:knockback_resistance": {
        "value": 0.1
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test":"has_damage",
                    "value":"attack"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  }
                ]
              },
              "event": "knockback",
              "target": "self"
            }
          },
          {
            "on_damage": {
              "filters": [
                {
                  "test":"has_damage",
                  "value":"fatal",
                  "operator": "!="
                }
              ],
              "event": "hurting",
              "target": "self"
            }
          },
          {
            "cause": "fall",
            "deals_damage": false
          }
        ]
      },
      "minecraft:attack": {
        "damage": 3
      },
      "minecraft:movement": {
        "value": 0.4
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 2.0
      },
      "minecraft:follow_range": {
        "value": 1024
      },
      "minecraft:physics": {},
      "minecraft:jump.static": {},
      "minecraft:movement.basic": {},

      "minecraft:on_target_acquired": {
        "event": "has_target",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "lost_target",
        "target": "self"
      },

      "minecraft:shooter": {
        "def": "coldsink:spitter_acid_throw_ai"
      },
      "minecraft:target_nearby_sensor": {
        "inside_range": 24.0,
        "outside_range": 25.0,
        "on_inside_range": {
          "event": "nacal_sdc:close_enough",
          "target": "self"
        },
        "on_outside_range": {
          "event": "nacal_sdc:too_far",
          "target": "self"
        }
      },

      //behavivors


      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "max_dist": 64,
        "entity_types": {
          "filters": {
            "all_of": [
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "monster"
              },
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "tool"
              },
              {
                "test": "has_tag",
                "subject": "other",
                "operator": "!=",
                "value": "neutral"
              }
            ]
          }
        }
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "shoot_now",
            "walk",
            "attack_mode"
          ]
        },
        "queue_command": {
          "command": [
            "scoreboard objectives add spitter_time dummy spitter_time",
            "scoreboard objectives add spitter_check dummy spitter_check",
            "scoreboard objectives add spitter_count dummy spitter_count",
            
            "scoreboard players add acid_count spitter_time 1",
            "scoreboard players operation @s spitter_time = acid_count spitter_time",
            "execute @s[scores={spitter_time=999..}] ~~~ scoreboard players set acid_count spitter_time 0"
          ]
        }
      },
      "nacal_sdc:close_enough": {
        "add": {
          "component_groups": [
            "shoot_now"
          ]
        },
        "remove": {
          "component_groups": [
            "lets_move"
          ]
        }
      },
      "nacal_sdc:too_far": {
        "add": {
          "component_groups": [
            "lets_move"
          ]
        },
        "remove": {
          "component_groups": [
            "shoot_now"
          ]
        }
      },
      "has_target": {
        "remove": {
          "component_groups": [
            "walk"
          ]
        },
        "add": {
          "component_groups": [
            "climb"
          ]
        }
      },
      "lost_target": {
        "remove": {
          "component_groups": [
            "climb"
          ]
        },
        "add": {
          "component_groups": [
            "walk"
          ]
        }
      },
      "knockback":{
        "queue_command": {
          "command": [
            "effect @s slowness 2 3 true"
          ]
        }
      },
      "hurting":{
        "queue_command": {
          "command": [
            "scoreboard players random @s[tag=!sound_interval] wp_random 1 3",

            "execute @s[tag=!sound_interval,scores={wp_random=1}] ~~~ playsound spitter.hurt_1 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=2}] ~~~ playsound spitter.hurt_2 @a ~~~",
            "execute @s[tag=!sound_interval,scores={wp_random=3}] ~~~ playsound spitter.hurt_3 @a ~~~",

            "scoreboard players reset @s[tag=!sound_interval] idle_time",
            "tag @s[tag=!sound_interval] add sound_interval"
          ]
        }
      },
      "skill": {
        "remove": {
          "component_groups": [
            "shoot_now"
          ]
        },
        "add": {
          "component_groups": [
            "skill"
          ]
        }
      },
      "cooldown": {
        "remove": {
          "component_groups": [
            "skill"
          ]
        },
        "add": {
          "component_groups": [
            "cooldown"
          ]
        }
      },
      "charged": {
        "remove": {
          "component_groups": [
            "cooldown"
          ]
        },
        "add": {
          "component_groups": [
            "shoot_now"
          ]
        }
      },
      // 救赎治愈变回人类
      "coldsink:default": {
        "queue_command": {
          "command": [
            "scoreboard players random @s wp_random 1 10",
            "execute @s[scores={wp_random=1..7}] ~~~ summon coldsink:spawner_human_mod",
            "execute @s[scores={wp_random=8..10}] ~~~ summon coldsink:human_hero",
            "event entity @s godie"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "godie"
          ]
        }
      }
    }
  }
}
