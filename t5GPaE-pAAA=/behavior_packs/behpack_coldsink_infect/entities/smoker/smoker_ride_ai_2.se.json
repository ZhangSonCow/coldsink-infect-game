          "command": [
            "tag @s add smoker_ride_clear"
          ]
        }
      },
      "godie": {
        "queue_command": {
          "command": [
            "scoreboard players operation @e[type=!player,family=smoker] smoker_check = @s smoker_time",
            "execute @e[type=!player,family=smoker] ~~~ scoreboard players operation @s smoker_check -= @s smoker_time",
            "scoreboard players reset @e[type=!player,family=smoker,scores={smoker_check=0}] smoker_check",
            "event entity @e[type=!player,family=smoker,scores={smoker_check=0}] skill_over",
            "effect @e[type=!player,family=smoker,scores={smoker_check=0}] slowness 0 8 true",
            "kill @e[type=item,name=拴绳,c=1]",
            "tag @s add two_die",
            "execute @e[type=coldsink:smoker_ride_ai_1] ~~~ scoreboard players operation @s smoker_check = @e[tag=two_die,c=1] smoker_time",
