      "minecraft:is_baby": {},
      "minecraft:ageable": {
        "duration": 1.4,
        "grow_up": {
          "event": "detect_die"
        }
      },
      "minecraft:timer": {
        "time": 0.05,
        "time_down_event": {
          "event": "testfor",
