      "minecraft:collision_box": {
        "width": 0,
        "height": 0
      }

      //behavivors

    },

    "events": {
      "testfor": {
        "queue_command": {
          "command": [
            "tag @s add neutral",
            "scoreboard players set @s bool 0",
            "execute @e[family=!player,tag=!neutral,r=2.4,c=1] ~~~ scoreboard players set @e[type=nacal_tac:detect_playerstep,c=1] bool 1",
            "event entity @s[scores={bool=0}] detect_die"
          ]
        }
      },
      "detect_die": {
        "add": {
          "component_groups": [
            "detect_die"
          ]
        }
      }
