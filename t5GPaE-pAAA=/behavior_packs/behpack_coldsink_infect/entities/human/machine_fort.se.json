        "priority": 10,
        "track_target": true
      },
      "minecraft:behavior.float": {
        "priority": 0
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "half_damage"
          ]
        }
      },
      "overHalfDamage": {
        "remove": {
          "component_groups": [
            "half_damage"
          ]
        },
        "add": {
          "component_groups": [
            "normal_damage"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "godie"
          ]
        }
      }
    }
