        "can_walk": true,
        "can_pass_doors": true,
        "can_open_doors": true,
        "is_amphibious": true,
        "can_float": true
      },


      //behavivors

      "minecraft:behavior.trade_with_player": {},
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 1.2
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.look_at_player": {
        "priority": 5,
