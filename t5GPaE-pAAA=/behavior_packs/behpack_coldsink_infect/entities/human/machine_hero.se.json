{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "coldsink:machine_hero",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "death": "controller.animation.machine_hero_ai.func",
        "spawn_fort": "animation.machine_hero_ai.spawn_fort.func"
      },
      "scripts": {
        "animate": [
          "death"
        ]
      }
    },

    "component_groups": {

      "godie": {
        "minecraft:instant_despawn": {}
      },
      // "coldsink:boomer.bile": {
      //   "minecraft:is_stunned": {},
      //   "minecraft:timer": {
      //     "time": 8,
      //     "time_down_event": {
      //       "target": "self",
      //       "event": "coldsink:boomer_bile_over"
      //     }
      //   }
      // },

      "range_mode": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:shooter": {
          "def": "coldsink:machine_bullet_ai"
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 1,
          "attack_interval_min": 0.16,
          "attack_interval_max": 0.24,
          "burst_shots": 1,
          "attack_radius": 128,
          "swing": true
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 3,
          "outside_range": 4,
          "on_inside_range": {
            "event": "turn_melee_mode",
            "target": "self"
          },
          "on_outside_range": {
            "event": "turn_range_mode",
            "target": "self"
          }
        }
      },
      
      "melee_mode": {
        "minecraft:variant": {
          "value": 2
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 1,
          "attack_once": false,
          "track_target": true,
          "require_complete_path": false,
          "random_stop_interval": 0,
          "reach_multiplier": 5,
          "speed_multiplier": 1,
          "attack_duration": 0.38,
          "hit_delay_pct": 0.3
        },
        "minecraft:behavior.melee_attack": {
          "priority": 10,
          "track_target": true
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 3,
          "outside_range": 4,
          "on_inside_range": {
            "event": "turn_melee_mode",
            "target": "self"
          },
          "on_outside_range": {
            "event": "turn_range_mode",
            "target": "self"
          }
        }
      },

      "skill_boom_mode": {
        "minecraft:is_sheared": {},
        "minecraft:shooter": {
          "def": "coldsink:machine_boom"
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 0,
          "attack_interval": 1.1,
          "burst_shots": 1,
          "attack_radius": 64,
          "swing": true
        },
        "minecraft:ageable": {
          "duration": 1.2,
          "grow_up": {
            "event": "turn_melee_mode",
            "target": "self"
          }
        }
      }

    },

    "components": {
      "minecraft:type_family": {
        "family": [ "player", "human_ai", "machine_hero", "hero" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/machine_hero.loot.json"
      },
      "minecraft:behavior.avoid_mob_type": {
        "priority": 0,
        "max_dist": 5,
        "max_flee": 6,
        "remove_target": false,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "acid"
            },
            "max_dist": 5,
            "walk_speed_multiplier": 1.28,
            "sprint_speed_multiplier": 1.28
          }
        ]
      },
      "minecraft:rideable": {
        "family_types": [ "jockey", "tool" ],
        "controlling_seat": 1,
        "seat_count": 10,
        "seats": [
          {
            "position": [ 0, 1.6, 0 ]
          }
        ]
      },
      "minecraft:nameable": {
        "always_show": false,
        "allow_name_tag_renaming": true
      },
      "minecraft:health": {
        "value": 80,
        "max": 80
      },
      "minecraft:timer": {
        "time": [ 10, 15 ],
        "time_down_event": {
          "target": "self",
          "event": "skill_check"
        }
      },
      "minecraft:movement": {
        "value": 0.38
      },
      "minecraft:knockback_resistance": {
        "value": 0.3
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test":"is_family",
                    "subject": "other",
                    "value":"boss"
                  }
                ]
              }
            },
            "damage_multiplier": 1.5
          }
        ]
      },
      "minecraft:attack": {
        "damage": 16
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "scan_interval": 50,
        "must_see": true,
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "monster"
                },
                {
                  "test": "has_tag",
                  "subject": "other",
                  "operator": "!=",
                  "value": "neutral"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "tool"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "bullet"
                }
              ]
            },
            "max_dist": 64
          }
        ]
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.9
      },
      "minecraft:follow_range": {
        "value": 1024
      },
      "minecraft:behavior.leap_at_target": {
        "priority": 3,
        "must_be_on_ground": true,
        "set_persistent": true,
        "target_dist": 128,
        "yd": 0.5
      },
      "minecraft:jump.static": {},
      "minecraft:physics": {},
      "minecraft:movement.basic": {},
      "minecraft:pushable": {},
      "minecraft:navigation.walk": {
        "can_walk": true,
        "can_pass_doors": true,
        "can_open_doors": true,
        "is_amphibious": true,
        "can_float": true
      },


      //behavivors

      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 1.2
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.look_at_player": {
        "priority": 5,
        "look_distance": 8,
        "probability": 0.02
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 2,
        "max_dist": 64,
        "entity_types": {
          "filters": {
            "all_of": [
              {
                "test": "has_tag",
                "subject": "other",
                "operator": "!=",
                "value": "neutral"
              }
            ]
          }
        }
      },
      "minecraft:behavior.float": {
        "priority": 0
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "range_mode"
          ]
        },
        "queue_command": {
          "command": [
            "playsound become_final_hero @a ~~~",
            "tag @s add is_hero",
            "event entity @s skill_check"
          ]
        }
      },
      "turn_range_mode": {
        "remove": {
          "component_groups": [
            "melee_mode",
            "skill_boom_mode"
          ]
        },
        "add": {
          "component_groups": [
            "range_mode"
          ]
        }
      },
      "turn_melee_mode": {
        "remove": {
          "component_groups": [
            "range_mode",
            "skill_boom_mode"
          ]
        },
        "add": {
          "component_groups": [
            "melee_mode"
          ]
        }
      },
      "skill_check": {
        "queue_command": {
          "command": [
            "execute @e[family=!player,tag=!neutral,r=16,c=1] ~~~ event entity @e[type=coldsink:machine_hero,c=1] skill"
          ]
        }
      },
      "skill": {
        "remove": {
          "component_groups": [
            "range_mode",
            "melee_mode"
          ]
        },
        "add": {
          "component_groups": [
            "skill_boom_mode"
          ]
        },
        "queue_command": {
          "command": [
            "playsound machine_hero_skill @a ~~~"
          ]
        }
      },
      "coldsink:jockey_control": {
        "add": {
          "component_groups": [
            "coldsink:jockey.control"
          ]
        }
      },
      "coldsink:jockey_control_over": {
        "remove": {
          "component_groups": [
            "coldsink:jockey.control"
          ]
        },
        "queue_command": {
          "command": [
            "tag @s remove jockey_riding"
          ]
        }
      },
      "coldsink:boomer_bile": {
        "add": {
          "component_groups": [
            "coldsink:boomer.bile"
          ]
        }
      },
      "coldsink:boomer_bile_over": {
        "remove": {
          "component_groups": [
            "coldsink:boomer.bile"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "godie"
          ]
        }
      }
    }
  }
}
