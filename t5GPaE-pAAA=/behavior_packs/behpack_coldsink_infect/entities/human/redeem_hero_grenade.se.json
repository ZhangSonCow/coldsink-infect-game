{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "coldsink:redeem_hero_grenade",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },

    "component_groups": {
      "die": {
        "minecraft:instant_despawn": {}
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [ "bullet", "boom", "tool" ]
      },
      "minecraft:collision_box": {
        "width": 0.5,
        "height": 0.5
      },
      "minecraft:ageable": {
        "duration": 3.0,
        "grow_up": {
          "event": "godie",
          "target": "self"
        }
      },
      "minecraft:projectile": {
        "anchor": 2,
        "on_hit": {
          "impact_damage": {
            // "damage": 0,
            "knockback": false,
            "destroy_on_hit": true
          },
          "definition_event": {
            "affect_projectile": true,
            "affect_shooter": false,
            "affect_target": false,
            "affect_splash_area": false,
            "event_trigger": {
              "event": "shot_tar",
              "target": "self"
            }
          },
          "stick_in_ground": {
            "shake_time": 0.3
          }
        },
        "power": 1.2,
        "gravity": 0.08,
        "angle_offset": 0,
        "liquid_inertia": 1,
        "stop_on_hurt": true
      },
      "minecraft:physics": {},
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 10,
          "use_motion_prediction_hints": true
        }
      }
    },
    "events": {
      "shot_tar": {
        "add": {
          "component_groups": [
            "die"
          ]
        },
        "queue_command": {
          "command": [
            "particle coldsink:redeem_hero_grenade ~~~",
            "damage @e[family=!player,family=!tool,family=!tools,r=8] 16 suicide",
            "effect @e[family=!player,family=!tool,family=!tools,r=8] slowness 5 10 true",
            "effect @e[family=!player,family=!tool,family=!tools,r=8] weakness 5 10 true",
            "playsound redeem_hero_freeze @a ~~~",
            "event entity @a[family=!player,family=!tool,family=!tools,r=8] freeze_yes"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "die"
          ]
        }
      }
    }
  }
}