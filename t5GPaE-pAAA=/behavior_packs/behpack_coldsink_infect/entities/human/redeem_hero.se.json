{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "coldsink:redeem_hero",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "c": "controller.animation.redeem_hero_ai.func"
      },
      "scripts": {
        "animate": [
          "c"
        ]
      }
    },

    "component_groups": {
      "godie": {
        "minecraft:instant_despawn": {}
      },
      "walk": {
        "minecraft:navigation.walk": {
          "can_walk": true,
          "can_pass_doors": true,
          "can_break_doors": true,
          "is_amphibious": true,
          "avoid_damage_blocks": false
        }
      },
      "climb": {
        "minecraft:navigation.climb": {
          "can_path_over_water": true,
          "blocks_to_avoid": [
            "minecraft:barrier"
          ]
        },
        "minecraft:behavior.leap_at_target": {
          "priority": 3,
          "must_be_on_ground": true,
          "set_persistent": true,
          "target_dist": 128,
          "yd": 0.6
        }
      },
      "melee_mode": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:behavior.delayed_attack": {
          "priority": 0,
          "attack_once": false,
          "track_target": true,
          "require_complete_path": false,
          "random_stop_interval": 0,
          "reach_multiplier": 5,
          "speed_multiplier": 1,
          "attack_duration": 0.3,
          "hit_delay_pct": 0.4
        },
        "minecraft:ageable": {
          "duration": 8,
          "grow_up": {
            "event": "turn_range_mode",
            "target": "self"
          }
        }
      },
      "range_mode": {
        "minecraft:variant": {
          "value": 2
        },
        "minecraft:shooter": {
          "def": "coldsink:redeem_hero_grenade"
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 0,
          "attack_interval": 1.1,
          "burst_shots": 1,
          "attack_radius": 64,
          "swing": true
        },
        "minecraft:ageable": {
          "duration": 1.3,
          "grow_up": {
            "event": "turn_melee_mode",
            "target": "self"
          }
        }
      },
      "skill_mode": {
        "minecraft:variant": {
          "value": 3
        },
        "minecraft:ageable": {
          "duration": 0.5,
          "grow_up": {
            "event": "turn_melee_mode",
            "target": "self"
          }
        }
      }
    },

    "components": {
      "minecraft:nameable": {
        "always_show": true,
        "allow_name_tag_renaming": false
      },
      "minecraft:type_family": {
        "family": [ "sdc", "player", "human_ai", "redeem_hero", "hero" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/redeem_hero.loot.json"
      },
      "minecraft:behavior.avoid_mob_type": {
        "priority": 0,
        "max_dist": 5,
        "max_flee": 6,
        "remove_target": false,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "acid"
            },
            "max_dist": 5,
            "walk_speed_multiplier": 1.28,
            "sprint_speed_multiplier": 1.28
          }
        ]
      },
      "minecraft:health": {
        "value": 85,
        "max": 85
      },
      "minecraft:knockback_resistance": {
        "value": 1.0
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.9
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "scan_interval": 50,
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "monster"
                },
                {
                  "test": "has_tag",
                  "subject": "other",
                  "operator": "!=",
                  "value": "neutral"
                }
              ]
            },
            "max_dist": 48
          }
        ],
        "must_see": true
      },
      "minecraft:timer": {
        "time": [8, 12],
        "looping": true,
        "time_down_event": {
          "event": "skill_check",
          "target": "self"
        }
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test":"is_family",
                    "subject": "other",
                    "value":"boss"
                  }
                ]
              }
            },
            "damage_multiplier": 1.5
          }
        ]
      },
      "minecraft:attack": {
        "damage": 13
      },
      "minecraft:movement": {
        "value": 0.38
      },
      "minecraft:follow_range": {
        "value": 1024
      },
      "minecraft:jump.static": {},
      "minecraft:physics": {},
      "minecraft:movement.basic": {},

      "minecraft:on_target_acquired": {
        "event": "has_target",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "lost_target",
        "target": "self"
      },

      //behavivors

      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "max_dist": 64,
        "entity_types": {
          "filters": {
            "all_of": [
              {
                "test": "is_family",
                "subject": "other",
                "operator": "!=",
                "value": "sdc"
              }
            ]
          }
        }
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "walk",
            "melee_mode"
          ]
        },
        "queue_command": {
          "command": [
            "playsound become_redeem_hero @a ~~~",
            "tag @s add is_hero",
            "event entity @s skill_check"
          ]
        }
      },
      "has_target": {
        "remove": {
          "component_groups": [
            "walk"
          ]
        },
        "add": {
          "component_groups": [
            "climb"
          ]
        }
      },
      "lost_target": {
        "remove": {
          "component_groups": [
            "climb"
          ]
        },
        "add": {
          "component_groups": [
            "walk"
          ]
        }
      },
      "turn_range_mode": {
        "remove": {
          "component_groups": [
            "melee_mode",
            "skill_mode"
          ]
        },
        "add": {
          "component_groups": [
            "range_mode"
          ]
        }
      },
      "turn_melee_mode": {
        "remove": {
          "component_groups": [
            "range_mode",
            "skill_mode"
          ]
        },
        "add": {
          "component_groups": [
            "melee_mode"
          ]
        }
      },
      "skill_check": {
        "queue_command": {
          "command": [
            "execute @e[family=!tool,tag=!neutral,type=!player,r=5,c=1] ~~~ event entity @e[type=coldsink:redeem_hero,c=1] skill"
          ]
        }
      },
      "skill": {
        "remove": {
          "component_groups": [
            "melee_mode",
            "range_mode"
          ]
        },
        "add": {
          "component_groups": [
            "skill_mode"
          ]
        },
        "queue_command": {
          "command": [
            "tag @s add redeem_hero_self",

            "execute @e[family=!tool,tag=!redeem_hero_self,r=5,c=1] ~~~ execute @s[family=monster,family=!boss,type=player] ~~~ tag @s add redeem_cure",
            "execute @e[family=!tool,tag=!redeem_hero_self,r=5,c=1] ~~~ event entity @s[family=monster,family=!boss,type=!zombie_villager] coldsink:default",
            "execute @e[family=!tool,tag=!redeem_hero_self,r=5,c=1] ~~~ event entity @s[type=zombie_villager] villager_converted",
            
            "execute @e[family=!tool,tag=!redeem_hero_self,r=5,c=1] ~~~ damage @s[family=monster,family=boss] 50 suicide",

            // "execute @e[family=!tool,tag=!redeem_hero_self,r=5,c=1] ~~~ effect @s[family=player] instant_health 1 3 true",
            // "execute @e[family=!tool,tag=!redeem_hero_self,r=5,c=1] ~~~ title @s[family=player] actionbar §a救赎猎手治疗了你",
            
            "tag @s remove redeem_hero_self"
          ]
        }
      },
      "spawn_com": {
        "queue_command": {
          "command": [
            "summon nacal_sdc:com ~~~ dirtout",
            "summon nacal_sdc:com ~~~ dirtout",
            "summon nacal_sdc:com ~~~ dirtout",
            "summon nacal_sdc:com ~~~ dirtout",
            "summon nacal_sdc:com ~~~ dirtout"
          ]
        }
      },
      "godie": {
        "add": {
          "component_groups": [
            "godie"
          ]
        }
      }
    }
  }
}
